<div class="container login">
  <div class="justify-content-center align-items-center">
    <div class="row justify-content-center align-items-center">
      <div class="card">
        <div class="card-block">
          <form method="POST">
            <h4 class="display-4 text-center">Welcome Back</h4>
            <p></p>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" name="email" id="email" placeholder="Email" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" name="password" id="password" placeholder="Password" class="form-control">
            </div>
            {{#if messages.error}}
              <div role="alert" class="alert alert-danger">
                {{#each messages.error}}
                  <div>{{msg}}</div>
                {{/each}}
              </div>
            {{/if}}
            <div class="container">
              <div class="row">
                <div class="col" style="padding: 0px;">
                  <button type="submit" class="btn btn-lg btn-outline-primary">Log in</button>
                </div>
                <div class="col justify-content-center align-self-center" style="padding: 0px; heigh: 100%; text-align: center;">
                    <a style="font-size: 22px; margin-bottom: 1rem;" class="align-text-bottom display-4 forgot" href="/forgot">Forgot Password?</a>
                </div>
              </div>
            </div>
          </form>
        </div>
        <div class="card-block" style="background-color: #F3F3F3">
          <p class="text-center">
            Don't have an account? <a href="/register">Register</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
