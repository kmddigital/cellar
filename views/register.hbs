<div class="container register">
  <div class="justify-content-center align-items-center">
    <div class="row justify-content-center align-items-center">
      <div class="card">
        <div class="card-block">
          <form method="POST">
            <h4 class="display-4 text-center">Welcome!</h4>
            <div class="form-group">
              <label for="name">Username</label>
              <input type="text" name="username" id="username" placeholder="Username" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" name="email" id="email" placeholder="Email" class="form-control">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" name="password" id="password" placeholder="Password" class="form-control">
            </div>
            {{#if messages.error}}
              <div role="alert" class="alert alert-danger">
                {{#each messages.error}}
                  <div>{{msg}}</div>
                {{/each}}
              </div>
            {{/if}}
            <button type="submit" style="width: 100%" class="btn btn-lg btn-outline-primary">Create an account</button>
          </form>
        </div>
        <div class="card-block" style="background-color: #F3F3F3">
          <p class="text-center">
            Already have an account? <a href="/login">Log in</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
