{{#is step 'mail'}}
  <form method="POST">
    <h4 class="display-4 text-center">Mail</h4>
    <h6>Now, enter your SMTP details.</h6>
    <div class="form-group">
      <label for="smtphost">Host</label>
      <input type="text" name="smtphost" id="smtphost" placeholder="localhost" class="form-control" autofocus>
    </div>
    <div class="form-group">
      <label for="smtpport">Port</label>
      <input type="number" name="smtpport" id="smtpport" placeholder="465" class="form-control">
    </div>
    <label class="custom-control custom-checkbox">
      <input type="checkbox" name="smtptls" id="smtptls" class="custom-control-input">
      <span class="custom-control-indicator"></span>
      <span class="custom-control-description">Use TLS</span>
    </label>
    <div class="form-group">
      <label for="smtpusername">Username</label>
      <input type="email" name="smtpusername" id="smtpusername" placeholder="Username" class="form-control">
    </div>
    <div class="form-group">
      <label for="smtppassword">Password</label>
      <input type="password" name="smtppassword" id="smtppassword" placeholder="Password" class="form-control">
    </div>
    {{#if messages.error}}
      <div role="alert" class="alert alert-danger">
        {{#each messages.error}}
          <div>{{msg}}</div>
        {{/each}}
      </div>
    {{/if}}
    {{#if messages.success}}
      <div role="alert" class="alert alert-success">
        {{#each messages.success}}
          <div>{{msg}}</div>
        {{/each}}
      </div>
    {{/if}}
    <button type="submit" style="width: 100%" class="btn btn-lg btn-outline-primary">Continue</button>
  </form>
{{/is}}
