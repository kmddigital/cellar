{{#is step 'instructions'}}
  <form method="POST">
    <h4 class="display-4 text-center">Welcome!</h4>
    <p style="margin-bottom: .5rem;">You've already started your journey! This setup utility will walk you through installing Cellar.</p>
    <p style="margin-bottom: 1rem;">Before continuing make sure you've installed and started a MongoDB
      instance. Also, have your SMTP creditials ready from the mail provider of your choice.</p>
    {{#if messages.error}}
      <div role="alert" class="alert alert-danger">
        {{#each messages.error}}
          <div>{{msg}}</div>
        {{/each}}
      </div>
    {{/if}}
    {{#if messages.success}}
      <div role="alert" class="alert alert-success">
        {{#each messages.success}}
          <div>{{msg}}</div>
        {{/each}}
      </div>
    {{/if}}
    <button type="submit" style="width: 100%" class="btn btn-lg btn-outline-primary">Continue</button>
  </form>
{{/is}}
{{#is step 'title'}}
  <form method="POST">
    <h4 class="display-4 text-center">Title</h4>
    <h6>First up, give your website a cool title.</h6>
    <div class="form-group">
