{{/is}}
{{#is step 'database'}}
  <form method="POST">
    <h4 class="display-4 text-center">Database</h4>
    <h6>Next up, enter your MongoDB URL.</h6>
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" name="database" id="database" placeholder="mongodb://user:pass@localhost:27017" class="form-control" autofocus>
    </div>
    {{#if messages.error}}
      <div role="alert" class="alert alert-danger">
